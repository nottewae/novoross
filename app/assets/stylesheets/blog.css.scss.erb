button{
    span.glyphicon{
        margin-left:5px;
    }
}
.navbar-default{
    min-height: 46px !important;
    button{
        margin-top:5px;
        margin-left:5px;
    }
}
.input-xlarge{
    width:100%;
}
.container{
    .row{
        .sep{
            border-top:solid 1px ;
            padding-top: 20px;
        }
    }
}
.images-no-padding{
    padding-left:0 !important;
    padding-right: 0 !important;
    margin-right:5px !important;
    width: 16.24% !important;
    cursor:pointer;
}
.row-top-pad-20{
    padding-top: 20px;
}
.sky-navbar{
    background-image: url(<%= asset_path "summer_sky.jpeg"%>);
    background-repeat: no-repeat;
    background-position: center center;
}
.nav > li > a {
    color:#000000 !important;
}
#links{
    img{
        margin-right: 5px;
    }
}
.no_border{
    border:none !important;
