    margin-top: 8px;
}
footer{
    .row {

            border-top: solid 1px;

    }
    .col-lg-12{
        .col-md-2{
            width:19.5%;
            padding-top: 20px;
            p {
                font-size:11px;
                &:first-child {
                    font-weight: bold;
                }
            }
